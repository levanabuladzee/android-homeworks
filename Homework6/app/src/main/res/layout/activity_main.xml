<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnPopulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Populate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUserWithCars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Get User Cars"
        app:layout_constraintEnd_toEndOf="@+id/btnPopulate"
        app:layout_constraintStart_toStartOf="@+id/btnPopulate"
        app:layout_constraintTop_toBottomOf="@+id/btnPopulate" />

    <Button
        android:id="@+id/btnDeleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Delete All"
        app:layout_constraintEnd_toEndOf="@+id/btnUserWithCars"
        app:layout_constraintStart_toStartOf="@+id/btnUserWithCars"
        app:layout_constraintTop_toBottomOf="@+id/btnUserWithCars" />

</androidx.constraintlayout.widget.ConstraintLayout>