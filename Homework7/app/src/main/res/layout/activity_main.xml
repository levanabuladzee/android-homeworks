<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnRun1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_job_1"
        app:layout_constraintBottom_toTopOf="@+id/btnRun2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRun2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_job_2"
        app:layout_constraintBottom_toTopOf="@+id/btnStop1"
        app:layout_constraintEnd_toEndOf="@+id/btnRun1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnRun1"
        app:layout_constraintTop_toBottomOf="@+id/btnRun1" />

    <Button
        android:id="@+id/btnStop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_jobs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnRun2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnRun2"
        app:layout_constraintTop_toBottomOf="@+id/btnRun2" />

</androidx.constraintlayout.widget.ConstraintLayout>